[branch]
	autosetuprebase = always
[cola]
	fontdiff = Source Code Pro,11,-1,5,50,0,0,0,0,0
# Dracula Dark Theme
[color]
  ui = auto
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = white
  frag = cyan bold reverse
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = white
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold
[commit]
	template = ~/.gitmessage
[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less -n
[fetch]
	purne = true
[filter "lfs"]
	clean = git-lfs clean %f
	required = true
	smudge = git-lfs smudge %f
[gui]
	fontdiff = -family \"Source Code Pro\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
[help]
	autoCorrect = 10
[http "https://gopkg.in"]
	followRedirects = true
[include]
	path = ~/.gitconfig.local
[init]
	templatedir = ~/.git_template
	defaultBranch = main
[log]
	decorate = full
[pull]
	rebase = true
[push]
	default = current
[rebase]
	autoStash = true
[stash]
	showPatch = true
[status]
	showUntrackedFiles = all
